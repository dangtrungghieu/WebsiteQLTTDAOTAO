@model WebApplicationProject.Model.HOCVIEN

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    function setActive(element) {
        // Loại bỏ lớp 'active' khỏi tất cả các mục
        var items = document.querySelectorAll(".list-group-item");
        items.forEach(function (item) {
            item.classList.remove("active");
        });

        // Thêm lớp 'active' cho mục chức năng được chọn
        element.classList.add("active");
    }
</script>

<div class="col-lg-4 pb-5">
    <!-- Account Sidebar-->
    <div class="author-card pb-3">
        <div class="author-card-cover" style="background-image: url(https://bootdey.com/img/Content/flores-amarillas-wallpaper.jpeg);"></div>
        <div class="author-card-profile">
            <div class="author-card-avatar">
                <img src="~/images/@Model.AnhDaiDien" alt="@Model.TenHocVien">
            </div>
            <div class="author-card-details">
                <h5 style="margin-top:10px">@Model.TenHocVien</h5>
                <h5 class="author-card-name text-lg"></h5><span class="author-card-position">
                    Joined February 06, 2023
                </span>
            </div>
        </div>
    </div>
    <div class="wizard">
        <nav class="list-group list-group-flush">
            <a class="list-group-item" href="@Url.Action("usProfile", "User")" onclick="setActive(this)">
                <i class="fe-icon-user text-muted"></i>Profile Settings
            </a>
            <a class="list-group-item" href="@Url.Action("Schedule", "User")" onclick="setActive(this)">
                <i class="fe-icon-map-pin text-muted"></i>Schedule
            </a>
            <a class="list-group-item" href="@Url.Action("MyWishList", "CourseUser")" target="" onclick="setActive(this)">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <i class="fe-icon-heart mr-1 text-muted"></i>
                        <div class="d-inline-block font-weight-medium text-uppercase">My Wishlist</div>
                    </div>
                    @*<span class="badge badge-secondary">3</span>*@
                </div>
            </a>
            <a class="list-group-item" href="@Url.Action("MyCourse", "CourseUser")" target="" onclick="setActive(this)">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <i class="fe-icon-tag mr-1 text-muted"></i>
                        <div class="d-inline-block font-weight-medium text-uppercase">My Course</div>
                    </div>
                    @*<span class="badge badge-secondary">4</span>*@
                </div>
            </a>
        </nav>
    </div>
</div>

