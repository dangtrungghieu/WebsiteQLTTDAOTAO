@using WebApplicationProject.Model;
@using PagedList.Mvc;
@model PagedList.PagedList<KHOAHOC>
@{
    ViewBag.Title = "Course";
    Layout = "~/Areas/User/Views/Shared/LayoutHomeUser.cshtml";
}
<h1 class="heading"> popular courses </h1>

<!-- course section  -->

<section class="course">
    @foreach (var khoahoc in Model)
    {
        <div class="box">
            <span class="amount">@string.Format("{0:#,##0,0}", @khoahoc.LePhi) VNĐ</span>
            <img src="~/images/@khoahoc.AnhKhoaHoc" alt="">
            <div class="stars">
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="far fa-star"></i>
            </div>
            <h3>@khoahoc.TenKhoaHoc</h3>
            <p>@TrunCate(khoahoc.MoTa, 100)</p>
            <a href="#" class="btn">learn more</a>
            <div class="icons">
                <p> <i class="far fa-clock"></i> 2 hours </p>
                <p> <i class="far fa-calendar"></i> 6 months </p>
                <p> <i class="fas fa-book"></i> 12 modules </p>
            </div>
        </div>
    }
