@*Phần Menu phân trang*@
<link rel="stylesheet" href="~/Content/PagedList.css" />
<div class="MenuTrang">
     @Html.PagedListPager(Model, page => Url.Action("Course", "Home", new { iMaKH = ViewBag.MaKH, page = page }))
</div>
<style>
    .MenuTrang{
        display: flex;
        justify-content:center;
        text-align:center;
    }
</style>
@helper TrunCate(string s, int length)
    {
        if (s.Length < length)
        {
            @s
        }
        else
        {
            @s.Substring(0, length)<text>...</text>
        }
    }

