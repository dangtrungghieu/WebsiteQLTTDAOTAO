@using WebApplicationProject.Model;
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/Layout_Admin.cshtml";
}
<div class="container-fluid px-4 bg-create">
    <div class="row g-3 my-2">
        <h1 class="well" style="text-align:center">THÊM PHÒNG HỌC MỚI</h1>
        <div class="col-lg-12 well">
            <br />
            @using (Html.BeginForm("Create", "PhongHoc", FormMethod.Post, new { @enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
        <div class="col-sm-12">
            <div class="row">
                <div class="col-sm-12 form-group">
                    <label class="mg-head">Tên phòng học</label>
                    <input type="text" placeholder="Nhập tên phòng học.." class="form-control"
                           value="@ViewBag.Ten" name="sTen" required>
                    <div class="thongbao">
                        <p> @ViewBag.ThongBao</p>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="mg-head">Loại phòng học</label>
                <select name="sLoaiPhong" class="form-control">
                    @foreach (var item in Model)
                    {
                        <option value="@item.MaLoai">@item.TenLoai</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="mg-head">Tình Trạng</label>
                <select name="sTinhTrang" class="form-control">
                    <option value="Còn Trống">Trống</option>
                    <option value="Đủ">Đủ</option>
                    <option value="Đang sửa">Đang sửa</option>
                </select>
            </div>
            <div class="form-group">
                <label class="mg-head">Sức chứa</label>
                <input type="number" min="0" placeholder="Nhập số học sinh tối đa của phòng học..." class="form-control"
                       value="@ViewBag.SucChua" name="sSucChua" required>
            </div>
            <div class="form-group">
                <label class="mg-head">Mã nhân viên</label>
                <input type="text" value="5" class="form-control" name="sMaNV" readonly>
            </div>
            <div class="form-group">
                <label class="mg-head">Tên nhân viên</label>
                <input type="text" value="Đặng Trung Hiếu" class="form-control" name="sTenNV" readonly>
            </div>
            <div class="form-group">
                <label class="mg-head">Ngày tạo</label>
                <input type="text" class="form-control" value="@Convert.ToDateTime(DateTime.Now)" name="sNgayTao" readonly>
            </div>
            <br />
            <button type="submit" class="btn btn-success mg-top ">Thêm mới</button>
            <button type="reset" class="btn btn-danger mg-top ">Nhập lại</button>
            @Html.ActionLink("Thêm mới loại phòng", "Index", null, htmlAttributes: new { @class = "btn btn-primary mg-top" })
        </div>
            }
            <br />
            <br />
            <div class="mg-top">
                <i class="fas fa-arrow-left">@Html.ActionLink("Trở về trang quản lí khóa học", "Index", null, htmlAttributes: new { @class = "btn btn-default" })</i>
            </div>
            <br />
        </div>
    </div>
</div>

