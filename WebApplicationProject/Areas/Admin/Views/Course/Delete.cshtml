
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/Layout_Admin.cshtml";
}
<div class="container-fluid px-4 bg-create">
    <div class="row g-3 my-2">
        <h1 class="well" style="text-align:center">XÓA THÔNG TIN KHÓA HỌC</h1>
        <div class="col-lg-12 well">
            <div class="row">
                @using (Html.BeginForm("Delete", "Course", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-12 form-group">
                                <label class="mg-head">Mã khóa học</label>
                                <input type="text" class="form-control" value="@Model.MaKhoaHoc" name="sMaKhoaHoc" readonly>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="mg-head">Tên khóa học</label>
                            <input type="text" class="form-control" value="@Model.TenKhoaHoc" name="sTenKhoaHoc" required readonly>
                        </div>
                        <div class="form-group">
                            <label class="mg-head">Mô tả</label>
                            <textarea rows="3" class="form-control" id="mota" name="sMoTa" required readonly>@Model.MoTa</textarea>
                            @*<script>
                                CKEDITOR.replace('sMoTa', {
                                    // Provide the activation key.
                                    licenseKey: 'YnBZZnlid1JmeFlKMTdXMGFwV3lRS3BsaEhYdUFrZExTSm1HM3d5Z3BFUDgyb21QM0ZEUDdQc2hvRUtZLU1qQXlNekV4TWprPQ==',
                                    // Set the default configuration.
                                    removePlugins: 'elementspath',
                                    removeButtons: 'Source',
                                });
                            </script>*@
                        </div>
                        <div class="form-group">
                            <label class="mg-head">Lệ phí</label>
                            <input type="number" min="0" class="form-control" value="@Model.LePhi" name="sLePhi" required readonly>
                        </div>
                        <div class="form-group">
                            <label class="mg-head">Ảnh bìa</label><br />
                            <img src="~/images/@Model.AnhKhoaHoc" width="200"/>
                        </div>
                        <div class="form-group">
                            <label class="mg-head">Mã nhân viên</label>
                            <input type="text" value="5" class="form-control" name="sMaNV" readonly>
                        </div>
                        <div class="form-group">
                            <label class="mg-head">Tên nhân viên</label>
                            <input type="text" value="Đặng Trung Hiếu" class="form-control" name="sTenNV" readonly>
                        </div>
                        <div class="form-group">
                            <label class="mg-head">Ngày tạo</label>
                            <input type="text" class="form-control" value="@Convert.ToDateTime(Model.NgayTao)" name="sNgayTao" readonly>
                        </div>
                        <button type="submit" class="btn btn-success mg-top ">Xóa</button>
                    </div>
                }

            </div>
        </div>
    </div>
    <div class="mg-top">
        <i class="fas fa-arrow-left">@Html.ActionLink("Trở về trang quản lí khóa học", "Index", null, htmlAttributes: new { @class = "btn btn-default" })</i>
    </div>
</div>

