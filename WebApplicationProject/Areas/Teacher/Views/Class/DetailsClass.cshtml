@model WebApplicationProject.Model.LOP

@{
    ViewBag.Title = "DetailsClass";
    Layout = "~/Areas/Teacher/Views/Shared/LayoutTeacher.cshtml";
}

<div class="col-lg-8 pb-5">
    <h2 style="text-align:center; margin-bottom:30px">Lớp: @Model.TenLop</h2>
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th style="text-align:center">Tên Học Viên</th>
                    <th style="text-align:center">Email</th>
                    <th style="text-align:center">Số Điện thoại</th>
                    <th style="text-align:center">Địa chỉ</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model.HOCVIEN)
                {
                    <tr>
                        <td>
                            <a href="@Url.Action("DetailsStudent","Class", new { id = student.MaHocVien })">@student.TenHocVien</a>
                        </td>
                        <td>@student.Email</td>
                        <td>@student.SoDienThoai</td>
                        <td>@student.DiaChi</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
